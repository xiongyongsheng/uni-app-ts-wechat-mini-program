{
  "easycom": {
    "autoscan": true,
    "custom": {
      "^uni-(.*)": "@dcloudio/uni-ui/lib/uni-$1/uni-$1.vue",
      "^c-(.*)": "@/components/$1/$1.vue"
    }
  },
  "pages": [
    {
      "path": "pages/open/open",
      "style": {
        "navigationStyle": "custom",
        "navigationBarTitleText": "开屏页"
      }
    },
    {
      "path": "pages/index/index",
      "style": {
        "navigationBarTitleText": "首页"
      }
    },
    {
      "path": "pages/my/my",
      "style": {
        "navigationBarTitleText": "我的"
      }
    },
    {
      "path": "pages/my/edit",
      "style": {
        "navigationBarTitleText": "用户信息编辑"
      }
    }
  ],
  "tabBar": {
    "custom": true,
    "color": "#7A7E83",
    "selectedColor": "#000",
    "borderStyle": "black",
    "backgroundColor": "#ffffff",
    "list": [
      {
        "text": "发现",
        "iconPath": "/static/custom-tab-bar/home.png",
        "selectedIconPath": "/static/custom-tab-bar/home_a.png",
        "pagePath": "pages/index/index"
      },
      {
        "text": "管家",
        "iconPath": "/static/custom-tab-bar/ai.png",
        "selectedIconPath": "/static/custom-tab-bar/ai_a.png",
        "pagePath": "pages/chat/chat"
      },
      {
        "text": "我的",
        "iconPath": "/static/custom-tab-bar/my.png",
        "selectedIconPath": "/static/custom-tab-bar/my_a.png",
        "pagePath": "pages/my/my"
      }
    ]
  },
  "globalStyle": {
    "navigationBarTextStyle": "black",
    "navigationBarTitleText": "隐市",
    "navigationBarBackgroundColor": "#ffffff",
    "backgroundColor": "#ffffff",
    "usingComponents": {
      "van-popup": "/wxcomponents/vant/popup/index"
    }
  }
}
