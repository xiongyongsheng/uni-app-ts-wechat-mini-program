.c-custom-tab-bar {
  --inset: 0rpx;
  /* position: fixed;
  bottom: calc(var(--inset)); */
  /* left: var(--inset);
  right: var(--inset); */
  background: rgba(255, 255, 255, 0.9);
  backdrop-filter: blur(5px) contrast(100%) saturate(100%);
  display: flex;
  justify-content: space-around;
  align-items: center;
  /* padding: 20rpx 0; */
  height: 100rpx;
  padding-bottom: env(safe-area-inset-bottom);
  border-radius: 0rpx;
  pointer-events: auto;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
}

.c-custom-tab-bar-item {
  flex: 1;
  text-align: center;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.c-custom-tab-bar-item image {
  --size: 45rpx;
  width: var(--size);
  height: var(--size);
}

.c-custom-tab-bar-item view {
  font-size: 22rpx;
  color: #8b8b8b;
}
.c-custom-tab-bar-item[data-active="true"] view {
  /* font-weight: bold; */
  color: #1d1d1d;
}
